extends layout

block append variables
  - var title = "Altar Tron Tracker for Magic: The Gathering"
  - var appTitle = "Altar Tron"
  - var description = "A custom tracker to assist tracking information when playing Altar Tron"
  - var slug = "altar"
  - var card = "altar/card-tracker-altar.png"
  - var frontPage = false
  - var fullScreenPage = true

block headExtra
  link(rel="apple-touch-icon", href="/altar/icon-tracker-altar.png")

block viewport
  meta(name="viewport", content="width=device-width, initial-scale=1, viewport-fit=cover")

